<wpml-config>
	<custom-types>
		<custom-type translate="1">mec-events</custom-type>
	</custom-types>
	<taxonomies>
		<taxonomy translate="1">mec_category</taxonomy>
		<taxonomy translate="1">mec_label</taxonomy>
		<taxonomy translate="1">mec_location</taxonomy>
		<taxonomy translate="1">mec_organizer</taxonomy>
		<taxonomy translate="1">mec_speaker</taxonomy>
	</taxonomies>
    <custom-fields>
        <custom-field action="translate">mec_tickets</custom-field>
    </custom-fields>
    <custom-fields-texts>
        <key name="mec_tickets">
            <key name="*">
                <key name="name" />
                <key name="description" />
                <key name="price_label" />
            </key>
        </key>
    </custom-fields-texts>
	<admin-texts>
        <key name="mec_options">
            <key name="messages">
                <key name="*"/>
            </key>
            <key name="reg_fields">
                <key name="*"/>
            </key>
            <key name="gateways">
                <key name="*">
                    <key name="title" />
                    <key name="comment" />
                </key>
            </key>
        </key>
    </admin-texts>
</wpml-config>